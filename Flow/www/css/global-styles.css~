/* Jumbotrons
-------------------------------------------------- */

/* Base class
------------------------- */
.jumbotron {
  position: relative;
  padding: 40px 0;
  color: #fff;
  text-align: center;
  text-shadow: 0 1px 3px rgba(0,0,0,.4), 0 0 30px rgba(0,0,0,.075);
  background: #020031; /* Old browsers */
  background: -moz-linear-gradient(45deg,  #83B7CD 0%, #7D3D2B 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,#83B7CD), color-stop(100%,#7D3D2B)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(45deg,  #83B7CD 0%,#7D3D2B 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(45deg,  #83B7CD 0%,#7D3D2B 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(45deg,  #83B7CD 0%,#7D3D2B 100%); /* IE10+ */
  background: linear-gradient(45deg,  #83B7CD 0%,#7D3D2B 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#83B7CD', endColorstr='#7D3D2B',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
  -webkit-box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
     -moz-box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
          box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
}
